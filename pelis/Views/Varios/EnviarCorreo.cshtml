@{
    ViewData["Title"] = "Enviar correo";
}

<h2>Enviar un correo</h2>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

<form asp-action="EnviarCorreo" method="post">
    <div>
        <label for="toEmail">Correo destino:</label>
        <input type="email" id="toEmail" name="toEmail" placeholder="Ej: correo@dominio.com" required />
    </div>
    <br />
    <div>
        <label for="subject">Asunto:</label>
        <input type="text" id="subject" name="subject" required />
    </div>
    <br />
    <div>
        <label for="body">Mensaje:</label>
        <textarea id="body" name="body" rows="5" required></textarea>
    </div>
    <br />
    <button type="submit">Enviar</button>
</form>