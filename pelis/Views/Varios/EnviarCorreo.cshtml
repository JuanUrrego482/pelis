@{
    ViewData["Title"] = "Enviar Correo";
}

<h2>Enviar Correo</h2>

<form asp-action="EnviarCorreo" method="post">
    <div class="form-group">
        <label for="toEmail">Correo destino</label>
        <input type="email" class="form-control" id="toEmail" name="toEmail" placeholder="example@domain.com" required>
    </div>
    <div class="form-group">
        <label for="subject">Asunto</label>
        <input type="text" class="form-control" id="subject" name="subject" required>
    </div>
    <div class="form-group">
        <label for="body">Mensaje</label>
        <textarea class="form-control" id="body" name="body" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (ViewBag.Message != null)

{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}